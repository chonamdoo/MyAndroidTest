<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.congwiny.customprogress.MainActivity">

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"/>
    <com.congwiny.customprogress.progress.HorizontalProgressBarWithNumber
        android:id="@+id/progress"
        android:layout_below="@id/tv_hello"
        android:layout_width="match_parent"
        app:progress_unreached_color="#FF6cbfff"
        app:progress_reached_color="@color/colorAccent"
        app:progress_text_color="@color/colorPrimary"
        app:progress_reached_bar_height="10dp"
        app:progress_unreached_bar_height="10dp"
        android:layout_height="100dp"/>
</RelativeLayout>
