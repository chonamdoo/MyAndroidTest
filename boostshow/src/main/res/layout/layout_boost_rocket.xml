<?xml version="1.0" encoding="utf-8"?>
<com.congwiny.boostshow.view.BoostEffectLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/green_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/cloud_iv"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:src="@drawable/cloud_star"
        android:visibility="invisible"/>

    <com.congwiny.boostshow.view.CircleRainyView
        android:id="@+id/rainy_view"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center" />

    <com.congwiny.boostshow.view.CircleProgressView
        android:id="@+id/progress_view"
        android:layout_width="200dp"
        android:layout_height="200dp" />

    <ImageView
        android:id="@+id/rocket_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal|bottom"
        android:src="@drawable/rocket"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/finish_iv"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:src="@drawable/set_finished2"
        android:visibility="invisible" />
</com.congwiny.boostshow.view.BoostEffectLayout>