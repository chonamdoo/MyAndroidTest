<?xml version="1.0" encoding="utf-8"?>

<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:ordering="sequentially">

    <objectAnimator
        android:duration="600"

        android:propertyName="rotationX"
        android:valueFrom="0"
        android:valueTo="360"/>

    <set android:duration="500">
        <objectAnimator
            android:propertyName="rotationX"
            android:valueFrom="0"
            android:valueTo="35" />
        <objectAnimator
            android:propertyName="rotationX"
            android:valueFrom="35"
            android:valueTo="-20" />
        <objectAnimator
            android:propertyName="rotationX"
            android:valueFrom="-20"
            android:valueTo="5" />
        <objectAnimator
            android:propertyName="rotationX"
            android:valueFrom="5"
            android:valueTo="0" />
    </set>
</set>
